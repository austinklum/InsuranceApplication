@model IEnumerable<InsuranceApplication.Models.Policy>

@{
    ViewData["Title"] = "Index";
}

<h1>Policies</h1>
<form asp-controller="Policies" asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PolicyCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxCoverage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentCoverage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxCoverage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentCoverage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Premium)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-block text-light">Details & Drugs</a>
            </td>
        </tr>
}
    </tbody>
</table>

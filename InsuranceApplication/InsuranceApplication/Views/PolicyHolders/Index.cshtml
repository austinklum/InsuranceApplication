@model IEnumerable<InsuranceApplication.Models.PolicyHolder>

@{
    ViewData["Title"] = "Index";
}

<h1>Policy Holders</h1>
<form asp-controller="PolicyHolders" asp-action="Index" method="get">
    <p>
        Search: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.Pronouns)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.PolicyCode)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.AmountPaid)</th>
            <th>@Html.DisplayNameFor(model => model.AmountRemaining)</th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                <td>@Html.DisplayFor(modelItem => item.Pronouns)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.PolicyCode)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td><label>$</label>@Html.DisplayFor(modelItem => item.AmountPaid)</td>
                <td><label>$</label>@Html.DisplayFor(modelItem => item.AmountRemaining)</td>
                @*<td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-secondary btn-block" style="width: 15%">Add Policyholder</a>

@model InsuranceApplication.Models.CreatePolicyHolderViewModel
@using InsuranceApplication.Controllers
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Create";
}

<h4>Add PolicyHolder</h4>

<div>
    @using (Html.BeginForm("Create", "PolicyHolders", FormMethod.Post, new { vm = Model }))
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.Name, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.Name, new { @class = "form-control" })
                @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderNameValidation).ToString()))
                {
                    <label class="text-danger">@HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderNameValidation).ToString()</label>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.DateOfBirth, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.DateOfBirth, new { @class = "form-control", @type = "date" })
                @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderDOBValidation).ToString()))
                {
                    <label class="text-danger">@HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderDOBValidation).ToString()</label>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.Pronouns, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.Pronouns, new { @class = "form-control" })
                @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderPronounsValidation).ToString()))
                {
                    <label class="text-danger">@HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderPronounsValidation).ToString()</label>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.Address, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.Address, new { @class = "form-control" })
                @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderAddressValidation).ToString()))
                {
                    <label class="text-danger">@HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderAddressValidation).ToString()</label>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.PolicyCode, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.DropDownListFor(a => a.CurrentPolicyHolder.PolicyCode, Model.Policies, "Select a policy code", new { @class = "form-control" })
                @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderPolicyCodeValidation).ToString()))
                {
                    <label class="text-danger">@HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderPolicyCodeValidation).ToString()</label>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.StartDate, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.StartDate, new { @class = "form-control", @type = "date" })
                @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderStartValidation).ToString()))
                {
                    <label class="text-danger">@HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderStartValidation).ToString()</label>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.EndDate, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.EndDate, new { @class = "form-control", @type = "date" })
                @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderEndValidation).ToString()))
                {
                    <label class="text-danger">@HttpContextAccessor.HttpContext.Session.GetString(HomeController.CreatePolicyHolderEndValidation).ToString()</label>
                }
            </dd>
        </dl>
        <input type="submit" value="Submit" class="btn btn-secondary btn-block" style="width: 15%" />
    }
</div>
<p> </p>
<div>
    <a asp-action="Index" class="btn btn-secondary btn-block" style="width: 15%">Cancel</a>
</div>
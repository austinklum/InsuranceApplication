@model InsuranceApplication.Models.CreatePolicyHolderViewModel
@using InsuranceApplication.Controllers
@{
    ViewData["Title"] = "Create";
}

<h4>Add PolicyHolder</h4>

<div>
    @using (Html.BeginForm("Create", "PolicyHolders", FormMethod.Post, new { vm = Model }))
    {
        @Html.HiddenFor(a => a.CurrentPolicyHolder.Id, new { @class = "form-control" })
        <dl class="row">
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.Name, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.Name, new { @class = "form-control" })
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.DateOfBirth, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.DateOfBirth, new { @class = "form-control" })
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.Pronouns, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.Pronouns, new { @class = "form-control" })
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.Address, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.Address, new { @class = "form-control" })
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.PolicyId, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.DropDownListFor(a => a.CurrentPolicyHolder.PolicyId, Model.Policies, "Select a policy code", new { @class = "form-control" })
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.StartDate, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.StartDate, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(a => a.CurrentPolicyHolder.StartDate, "", new { @class = "text-danger" })
            </dd>
            <dt class="col-sm-2">
                @Html.LabelFor(a => a.CurrentPolicyHolder.EndDate, new { @class = "form-label" })
            </dt>
            <dd class="col-sm-10">
                @Html.TextBoxFor(a => a.CurrentPolicyHolder.EndDate, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(a => a.CurrentPolicyHolder.EndDate, "", new { @class = "text-danger" })
            </dd>
        </dl>
        @Html.HiddenFor(a => a.CurrentPolicyHolder.AmountPaid, new { @class = "form-control" })
        @Html.HiddenFor(a => a.CurrentPolicyHolder.AmountRemaining, new { @class = "form-control" })
        @Html.HiddenFor(a => a.CurrentPolicyHolder.PolicyCode, new { @class = "form-control" })
        <input type="submit" value="Submit" class="btn btn-secondary btn-block" style="width: 15%" />
    }
</div>
<p> </p>
<div>
    <a asp-action="Index" class="btn btn-secondary btn-block" style="width: 15%">Cancel</a>
</div>
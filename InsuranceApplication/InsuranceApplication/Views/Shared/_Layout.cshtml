@using Microsoft.AspNetCore.Http
@using InsuranceApplication.Controllers
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InsuranceApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow mb-3">
            <div class="container d-flex align-items-center">
                <a class="navbar-brand text-light d-sm-inline-flex" asp-area="" asp-controller="Home" asp-action="UserDashBoard">Insurance Application</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 align-items-baseline">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="UserDashBoard">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Policies" asp-action="Index">Policies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="PolicyHolders" asp-action="Index">Policy Holders</a>
                        </li>
                        <li class="nav-item mr-auto">
                            <a class="nav-link text-light" asp-area="" asp-controller="PTransactions" asp-action="Index">Transactions</a>
                        </li>
                        <li>
                            <label class="text-light d-sm-inline-flex mr-1">Welcome, @HttpContextAccessor.HttpContext.Session.GetString(HomeController.Name).ToString()</label>
                        </li>
                        <li>
                            <a asp-action="MyDetails" asp-id="@int.Parse(HttpContextAccessor.HttpContext.Session.GetString(HomeController.UserId))" class="text-light d-sm-inline-flex">View my details</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="LogOut">Log out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - InsuranceApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

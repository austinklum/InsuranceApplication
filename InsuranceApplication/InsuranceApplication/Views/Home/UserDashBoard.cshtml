@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Title = "UserDashBoard";
}

<fieldset>
    @if (HttpContextAccessor.HttpContext.Session.GetString("Username") != null)
    {
        <p>
            <H3>Welcome @HttpContextAccessor.HttpContext.Session.GetString("Username").ToString()</H3>
        </p>
    }
    <h4>Unprocessed transactions</h4>
    @await Component.InvokeAsync("TransactionList")
    @using (Html.BeginForm("LogOut", "Home", FormMethod.Post))
    {
        <input type="submit" value="Log out" class="btn btn-secondary btn-block text-light" style="width: 15%"/>
    }
</fieldset>
